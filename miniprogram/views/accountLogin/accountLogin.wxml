<view class="row">
  <input
    data-type="userName"
    placeholder="用户名"
    bindinput="bindKeyInput"
    value="{{userName}}"
  />
</view>
<view class="row">
  <input
    data-type="password"
    placeholder="密码"
    bindinput="bindKeyInput"
    value="{{password}}"
  />
</view>
<button class="login-btn" bindtap="loginHandle">登录</button>